@model List<Holiday>
@{
    ViewData["Title"] = "All Holidays";
    Layout = "_LayoutOptions";
}
<div class="row justify-content-center m-3">
    <p class="lead row justify-content-center fs-4">All Holiday Details</p>
    <table class="table">
        <thead>
            <tr class="table-danger">

                <td>Date</td>
                <td>Title</td>
                <td class="table-success" colspan="2"><p class="row justify-content-center">Options</p></td>

            </tr>
        </thead>
        <tbody>
            @foreach (var date in Model)
            {
                <tr class="table-secondary">
                    <td>@date.Holiday1</td>
                    <td>@date.Title</td>
                    <td class="table-success">
                        <a asp-controller="Holiday" asp-action="DeleteHoliday" asp-route-id="@date.DayId" class="btn btn-primary"
                           onclick="return confirm('Are you sure you want delete this Holiday Details?')">Delete</a>
                    </td>
                    <td class="table-success">
                        <a asp-controller="Holiday" asp-action="EditHoliday" asp-route-id="@date.DayId" class="btn btn-primary">Edit</a>

                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>


